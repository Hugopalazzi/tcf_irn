{
	"useTabs": true,
	"singleQuote": true,
	"trailingComma": "none",
	"printWidth": 150,
	"plugins": ["prettier-plugin-svelte"],
	"semi": true,
	"svelteBracketNewLine": false,
	"bracketSameLine": true,
	"htmlWhitespaceSensitivity": "ignore",
	"overrides": [
		{
			"files": "*.svelte",
			"options": {
				"parser": "svelte"
			}
		},
		{
			"files": "*.ts",
			"options": {
				"parser": "typescript"
			}
		}
	]
}
